{
  "name": "superintendent",
  "version": "1.0.0",
  "description": "Write SQLs on CSVs",
  "license": "UNLICENSED",
  "main": "dist/prod/main.js",
  "scripts": {
    "build:watch": "webpack --watch --config webpack.dev.js",
    "build": "webpack --config webpack.dev.js",
    "build:prod": "webpack --config webpack.prod.js",
    "start": "electron dist/dev/main.js",
    "pack": "yarn run build:prod && electron-builder --mac --linux --win"
  },
  "build": {
    "appId": "tanin.superintendent",
    "directories": {
      "output": "out"
    },
    "mac": {
      "category": "public.app-category.finance",
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "files": [
      "dist",
      "package.json",
      "!.git{/*}",
      "!.idea{/*}",
      "!out{/*}",
      "!src{/*}"
    ],
    "afterSign": "scripts/notarize.js"
  },
  "author": "Tanin Na Nakorn",
  "devDependencies": {
    "@types/codemirror": "^5.60.0",
    "@types/electron": "^1.6.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "css-loader": "^5.0.1",
    "electron": "^12.0.7",
    "electron-builder": "^22.10.5",
    "electron-notarize": "^1.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.11",
    "typescript": "^4.2.4",
    "webpack": "^5.9.0",
    "webpack-cli": "^4.2.0",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "codemirror": "^5.61.1",
    "csv-parse": "4.15.4",
    "csv-stringify": "^5.6.2",
    "electron-default-menu": "^1.0.2",
    "sql-formatter": "^4.0.2",
    "sqlite": "4.0.21",
    "sqlite3": "5.0.2"
  }
}
