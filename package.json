{
  "name": "superintendent",
  "version": "2.0.1",
  "description": "Write SQLs on CSVs",
  "license": "UNLICENSED",
  "main": "dist/prod/main.js",
  "scripts": {
    "build:watch": "webpack --watch --config webpack.dev.js",
    "build": "webpack --config webpack.dev.js",
    "build:prod": "webpack --config webpack.prod.js",
    "start": "electron dist/dev/main.js",
    "pack:mac": "yarn run build:prod && electron-builder --mac",
    "pack:linux": "yarn run build:prod && electron-builder --linux",
    "pack:win": "yarn run build:prod && electron-builder --win",
    "test": "jest --useStderr"
  },
  "build": {
    "appId": "tanin.superintendent",
    "directories": {
      "output": "out"
    },
    "mac": {
      "category": "public.app-category.finance",
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "files": [
      "dist",
      "package.json",
      "!.git{/*}",
      "!.idea{/*}",
      "!out{/*}",
      "!src{/*}"
    ],
    "afterSign": "scripts/notarize.js"
  },
  "author": "Tanin Na Nakorn",
  "devDependencies": {
    "@babel/preset-env": "^7.14.5",
    "@types/chart.js": "^2.9.32",
    "@types/codemirror": "^5.60.0",
    "@types/electron": "^1.6.10",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "css-loader": "^5.0.1",
    "electron": "^13.1.2",
    "electron-builder": "22.11.7",
    "electron-notarize": "^1.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^27.0.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^8.0.11",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4",
    "webpack": "^5.9.0",
    "webpack-cli": "^4.2.0",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "chart.js": "^3.3.2",
    "codemirror": "^5.61.1",
    "csv-parse": "4.15.4",
    "duckdb": "0.2.3",
    "electron-default-menu": "^1.0.2",
    "electron-store": "^8.0.0",
    "sql-formatter": "^4.0.2",
    "sweetalert2": "^11.0.18"
  }
}
