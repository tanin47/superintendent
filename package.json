{
  "name": "superintendent",
  "version": "2.1.0",
  "description": "Write SQLs on CSVs",
  "license": "UNLICENSED",
  "main": "dist/prod/main.js",
  "scripts": {
    "build:watch": "webpack --watch --config webpack.dev.js",
    "build": "webpack --config webpack.dev.js",
    "start": "electron dist/dev/main.js",
    "pack": "yarn run build:prod && electron-builder --mac --linux --win",
    "test": "jest --useStderr"
  },
  "build": {
    "appId": "tanin.superintendent",
    "directories": {
      "buildResources": "electron-builder/build",
      "output": "electron-builder/out"
    },
    "mac": {
      "category": "public.app-category.finance",
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "electron-builder/build/entitlements.mac.plist",
      "entitlementsInherit": "electron-builder/build/entitlements.mac.plist"
    },
    "files": [
      "dist/prod",
      "package.json",
      "!.git{/*}",
      "!.idea{/*}",
      "!out{/*}",
      "!src{/*}"
    ],
    "extraResources": [
      "./deps/csv_writer/csv_writer.dylib",
      "./deps/csv/csv.dylib",
      "./deps/ext/ext.dylib",
      "./deps/csv_writer/csv_writer.dll",
      "./deps/csv/csv.dll",
      "./deps/ext/ext.dll",
      "./deps/csv_writer/csv_writer.so",
      "./deps/csv/csv.so",
      "./deps/ext/ext.so"
    ],
    "asarUnpack": [
      "dist/prod/worker.js",
      "node_modules"
    ],
    "afterSign": "scripts/notarize.js"
  },
  "author": "Tanin Na Nakorn",
  "devDependencies": {
    "@types/better-sqlite3": "^5.4.1",
    "@types/chart.js": "^2.9.32",
    "@types/codemirror": "^5.60.0",
    "@types/electron": "^1.6.10",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "css-loader": "^5.0.1",
    "electron": "^13.1.2",
    "electron-builder": "22.11.7",
    "electron-notarize": "^1.0.0",
    "electron-rebuild": "^2.3.5",
    "file-loader": "^6.2.0",
    "gulp": "^4.0.2",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^27.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "threads-plugin": "^1.4.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^8.0.11",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5",
    "webpack": "^5.9.0",
    "webpack-cli": "^4.2.0",
    "webpack-merge": "^5.7.3",
    "worker-loader": "^3.0.8"
  },
  "dependencies": {
    "@tippyjs/react": "^4.2.5",
    "axios": "^0.21.1",
    "better-sqlite3": "^7.4.1",
    "chart.js": "^3.3.2",
    "codemirror": "^5.61.1",
    "csv-parse": "4.15.4",
    "electron-default-menu": "^1.0.2",
    "electron-store": "^8.0.0",
    "nan": "^2.14.0",
    "react-modal": "^3.14.3",
    "sql-formatter": "^4.0.2",
    "sweetalert2": "^11.0.18",
    "threads": "^1.6.5",
    "tiny-worker": "^2.3.0",
    "tippy.js": "^6.3.1"
  }
}
